<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/gmarketsans"
            android:gravity="center"
            android:minHeight="60dp"
            android:text="app name"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:fontFamily="@font/gmarketsans"
            android:gravity="center"
            android:minHeight="60dp"
            android:text="상세 리포트"
            android:textColor="@color/white"
            android:textSize="37sp"
            android:textStyle="bold" />

<!--        월별 평균 체중 필요-->
        <TextView
            android:layout_width="361dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="#ADAEB1"
            android:text="월별 평균 체중\n9월 -60kg\n10월 -58kg\n11월 -58kg"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
<!--평균 운동 칼로리 필요-->
        <TextView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ADAEB1"
            android:text="평균 운동 칼로리 kcal"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
<!--        평균 걸음수 필요-->
        <TextView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ADAEB1"
            android:text="평균 걸음수 보"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
<!--        운동을 가장 많이 한 날-->
        <TextView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ADAEB1"
            android:text="운동을 가장 많이 한 날 "
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_baseline_home_24"
                android:scaleType="fitStart"
                android:text="Home"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_baseline_person_24"
                android:text="Community"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_baseline_settings_24"
                android:text="Setting"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/material_dynamic_neutral80"
                android:drawableTop="@drawable/ic_baseline_dehaze_24"
                android:text="menu"
                android:textSize="11sp" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>